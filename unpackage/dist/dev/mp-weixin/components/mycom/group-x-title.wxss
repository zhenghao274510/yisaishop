.fixed {
  position: fixed;
  z-index: 9999;
}
.group_splace {
  height: 90rpx;
}
.ss-scroll-navbar {
  width: 100%;
  background-color: #FFFFFF;
  white-space: nowrap;
}
.ss-scroll-navbar .nav-item {
  height: 90rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  color: #666666;
  display: inline-block;
  position: relative;
  font-size: 30rpx;
}
.ss-scroll-navbar .nav-item .title {
  line-height: 90rpx;
}
.ss-scroll-navbar .current {
  color: #000000 !important;
}
.ss-scroll-navbar .current::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 118rpx;
  height: 2rpx;
  background: #007030;
  border-radius: 4rpx;
}

